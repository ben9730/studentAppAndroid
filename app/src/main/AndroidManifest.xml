<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studentapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentApp">
        <activity
            android:name=".StudentEditActivity"
            android:exported="false"
            android:parentActivityName=".StudentListRvActivity"/>
        <activity
            android:name=".StudentDetailsActivity"
            android:exported="false"
            android:parentActivityName=".StudentListRvActivity" />
        <activity
            android:name=".NewStudentActivity"
            android:exported="false"
            android:parentActivityName=".StudentListRvActivity" /> <!-- how to add backarrow -->
        <activity
            android:name=".StudentListRvActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>